<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greencolor"
    tools:context=".NewAccountActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="299dp"
        android:fontFamily="sans-serif-light"
        android:text="Wanna help? Choose Shopper!"
        android:textColor="@color/whitecolor"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="242dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="86dp"
        android:fontFamily="sans-serif-light"
        android:text="Need groceries? Choose Reciever!"
        android:textColor="@color/whitecolor"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/shopperbutton"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/loginbtn"
        android:elevation="5dp"
        android:text="SHOPPER"
        android:textColor="@color/lightwhite"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/buyerbutton"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="182dp"
        android:background="@drawable/signupbtn"
        android:elevation="5dp"
        android:text="RECIEVER"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="273dp" />


</RelativeLayout>